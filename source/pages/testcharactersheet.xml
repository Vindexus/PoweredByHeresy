<h1>Character Sheet</h1>
<div>
  <strong>Character name:</strong> <span class="field"></span>
  <strong>Background:</strong> <span class="field"></span>
  <strong>Home World:</strong> <span class="field"></span>
</div>
<table class="table">
  <thead>
    <tr>
      {{#each statistics}}
      <th>
        <strong>{{abbr}}</strong><br />
        <small>{{name}}</strong>
      </th>
      {{/each}}
    </tr>
  </thead>
  <tbody>
    <tr>
      {{#each statistics}}
      <td>
        <input type="text" size="2" />
      </td>
      {{/each}}
    </tr>
  </tbody>
</table>

<h2>Starting Moves</h2>
{{>move tactical_advantage}}
{{>move armored}}

<h2>Advanced Moves</h2>