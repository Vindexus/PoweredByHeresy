doctype html
html
  head
    title #{title} - Powered by Heresy
    link(href="http://netdna.bootstrapcdn.com/bootstrap/3.0.0-rc1/css/bootstrap.min.css" rel="stylesheet")
    script(src="https://code.jquery.com/jquery-3.1.1.slim.min.js")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js", integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa", crossorigin="anonymous")
    link(href="/stylesheets/style.css" rel="stylesheet")
  body
    .navbar.navbar-fixed-top
      .container
        button.navbar-toggle(type='button', data-toggle='collapse', data-target='.nav-collapse')
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='/') Heresy World
        .nav-collapse.collapse
          ul.nav.navbar-nav
            -active = pageName == 'playingthegame' ? 'active' : ''
            li(class="#{active}")
              a(href='/playingthegame') Playing the Game
            -active = ['moves', 'basicmoves', 'specialmoves', 'advancedmoves'].indexOf(pageName) >= 0 ? 'active' : ''
            li(class="dropdown #{active}")
              a.dropdown-toggle(href='/moves', data-toggle='dropdown')
                | Moves 
                b.caret
              ul.dropdown-menu
                li
                  a(href='/basicmoves') Basic Moves
                li
                  a(href='/specialmoves') Special Moves
                li
                  a(href='/advancedmoves') Advanced Moves
            li.dropdown
              a.dropdown-toggle(href='/specialties', data-toggle='dropdown')
                | Specialties 
                b.caret
              ul.dropdown-menu
                li
                  a(href='/warrior') Warrior
                li
                  a(href='/assassin') Assassin
          ul.nav.navbar-nav.pull-right
            li
              a(href='https://github.com/Vindexus/PoweredByHeresy' target="_blank") GitHub
            li
              a(href='https://github.com/Vindexus/PoweredByHeresy/tree/master/docs' target="_blank") Docs
    .container
      .row
        if submenu
          .col-sm-3
            ul#sidebar.nav.nav-stacked.affix
              each item,key in submenu
                li
                  a(href="#{item.url}")= item.label
        .col-sm-9
          block content